<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/inputIBAN"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="IBAN (optional)"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/inputBIC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="BIC (optional)"
        app:layout_constraintTop_toBottomOf="@id/inputIBAN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/inputBankName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Bankname (optional)"
        app:layout_constraintTop_toBottomOf="@id/inputBIC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/finishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fertigstellen"
        app:layout_constraintTop_toBottomOf="@id/inputBankName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
